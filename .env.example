# Environment Variables Template for Production Deployment
# Copy this file to .env and fill in your actual values
# DO NOT commit the .env file to version control

# Database Connection String
# For SQLite (local development):
# ConnectionStrings__DefaultConnection=DataSource=Data/app.db;Cache=Shared

# For PostgreSQL (Render production):
# ConnectionStrings__DefaultConnection=Host=your-host;Database=your-db;Username=your-user;Password=your-password

# For SQL Server (alternative production):
# ConnectionStrings__DefaultConnection=Server=your-server;Database=your-db;User Id=your-user;Password=your-password;TrustServerCertificate=true

ConnectionStrings__DefaultConnection=YOUR_PRODUCTION_CONNECTION_STRING_HERE

# ASP.NET Core Environment
ASPNETCORE_ENVIRONMENT=Production

# Application URLs (optional)
# ASPNETCORE_URLS=http://0.0.0.0:5000
