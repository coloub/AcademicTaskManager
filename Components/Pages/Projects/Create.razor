@page "/projects/create"
@using AcademicTaskManager.Data
@using AcademicTaskManager.Services
@using Microsoft.AspNetCore.Authorization
@using System.Security.Claims
@attribute [Authorize]
@inject ProjectService ProjectService
@inject NavigationManager Navigation
@inject AuthenticationStateProvider AuthenticationStateProvider
@rendermode InteractiveServer

<PageTitle>Crear Proyecto</PageTitle>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">
                        <i class="bi bi-plus-circle me-2"></i>Crear Nuevo Proyecto
                    </h3>
                </div>
                <div class="card-body">
                    <EditForm Model="@project" OnValidSubmit="HandleValidSubmit" OnInvalidSubmit="HandleInvalidSubmit">
                        <DataAnnotationsValidator />
                        
                        <div class="mb-3">
                            <label for="title" class="form-label">Título del Proyecto <span class="text-danger">*</span></label>
                            <InputText id="title" class="form-control" @bind-Value="project.Title" placeholder="Ej: Proyecto Final de Bases de Datos" />
                            <ValidationMessage For="@(() => project.Title)" class="text-danger" />
                        </div>

                        <div class="mb-3">
                            <label for="description" class="form-label">Descripción <span class="text-danger">*</span></label>
                            <InputTextArea id="description" class="form-control" @bind-Value="project.Description" rows="5" 
                                          placeholder="Describe tu proyecto académico: objetivos, alcance, requisitos, etc." />
                            <ValidationMessage For="@(() => project.Description)" class="text-danger" />
                            <div class="form-text">@project.Description.Length / 2000 caracteres</div>
                        </div>

                        <ValidationSummary class="text-danger" />

                        @if (!string.IsNullOrEmpty(errorMessage))
                        {
                            <div class="alert alert-danger" role="alert">
                                <i class="bi bi-exclamation-triangle me-2"></i>@errorMessage
                            </div>
                        }

                        @if (!string.IsNullOrEmpty(successMessage))
                        {
                            <div class="alert alert-success" role="alert">
                                <i class="bi bi-check-circle me-2"></i>@successMessage
                            </div>
                        }

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary" disabled="@isSubmitting" @onclick="OnButtonClick">
                                @if (isSubmitting)
                                {
                                    <span class="spinner-border spinner-border-sm me-1" role="status" aria-hidden="true"></span>
                                    <span>Creando...</span>
                                }
                                else
                                {
                                    <i class="bi bi-save me-1"></i>
                                    <span>Crear Proyecto</span>
                                }
                            </button>
                            <button type="button" class="btn btn-secondary" @onclick="CancelCreate">
                                <i class="bi bi-x-circle me-1"></i>Cancelar
                            </button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private Project project = new Project();
    private bool isSubmitting = false;
    private string? errorMessage;
    private string? successMessage;
    private bool isInitialized = false;
    
    [Inject]
    private ILogger<Create> Logger { get; set; } = default!;

    protected override async Task OnInitializedAsync()
    {
        Logger.LogInformation("=== OnInitializedAsync ===");
        try
        {
            var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
            var userId = authState.User.FindFirst(ClaimTypes.NameIdentifier)?.Value;
            
            Logger.LogInformation($"UserId en OnInitialized: {userId}");
            
            if (!string.IsNullOrEmpty(userId))
            {
                project.OwnerUserId = userId;
                isInitialized = true;
                Logger.LogInformation("UserId asignado correctamente");
            }
            else
            {
                errorMessage = "No se pudo identificar al usuario. Por favor, inicia sesión nuevamente.";
                Logger.LogWarning("UserId es null o vacío en OnInitialized");
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error en OnInitializedAsync");
            errorMessage = $"Error al inicializar: {ex.Message}";
        }
    }

    private void OnButtonClick()
    {
        Logger.LogInformation("=== BOTÓN CLICKEADO ===");
        Logger.LogInformation($"Título actual: '{project.Title}'");
        Logger.LogInformation($"Descripción actual: '{project.Description}'");
        Logger.LogInformation($"OwnerUserId actual: '{project.OwnerUserId}'");
    }

    private void HandleInvalidSubmit()
    {
        Logger.LogWarning("=== FORMULARIO INVÁLIDO ===");
        Logger.LogWarning($"Título: '{project.Title}' - Vacío: {string.IsNullOrEmpty(project.Title)}");
        Logger.LogWarning($"Descripción: '{project.Description}' - Vacío: {string.IsNullOrEmpty(project.Description)}");
        Logger.LogWarning($"OwnerUserId: '{project.OwnerUserId}' - Vacío: {string.IsNullOrEmpty(project.OwnerUserId)}");
        errorMessage = "Por favor completa todos los campos requeridos.";
    }

    private async Task HandleValidSubmit()
    {
        Logger.LogInformation("=== INICIO HandleValidSubmit ===");
        Logger.LogInformation($"Título: {project.Title}");
        Logger.LogInformation($"Descripción: {project.Description}");
        Logger.LogInformation($"OwnerUserId: {project.OwnerUserId}");
        
        isSubmitting = true;
        errorMessage = null;
        successMessage = null;

        try
        {
            if (string.IsNullOrEmpty(project.OwnerUserId))
            {
                errorMessage = "No se pudo identificar al usuario.";
                Logger.LogWarning("OwnerUserId es null o vacío en HandleValidSubmit");
                return;
            }

            Logger.LogInformation("Llamando a CreateProjectAsync...");
            var createdProject = await ProjectService.CreateProjectAsync(project);
            Logger.LogInformation($"Proyecto creado exitosamente con ID: {createdProject.Id}");
            
            successMessage = "¡Proyecto creado exitosamente!";
            await Task.Delay(1000);
            
            Logger.LogInformation("Navegando a /projects");
            Navigation.NavigateTo("/projects", forceLoad: true);
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error al crear el proyecto");
            errorMessage = $"Error al crear el proyecto: {ex.Message}";
        }
        finally
        {
            isSubmitting = false;
            Logger.LogInformation("=== FIN HandleValidSubmit ===");
        }
    }

    private void CancelCreate()
    {
        Navigation.NavigateTo("/projects");
    }
}
