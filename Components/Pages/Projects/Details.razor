@page "/projects/{ProjectId:int}"
@using AcademicTaskManager.Data
@using AcademicTaskManager.Services
@using Microsoft.AspNetCore.Authorization
@using System.Security.Claims
@attribute [Authorize]
@inject ProjectService ProjectService
@inject TaskService TaskService
@inject NavigationManager Navigation
@inject AuthenticationStateProvider AuthenticationStateProvider
@rendermode InteractiveServer

<PageTitle>@(project?.Title ?? "Detalles del Proyecto")</PageTitle>

<div class="container mt-4">
    @if (isLoading)
    {
        <div class="text-center my-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Cargando...</span>
            </div>
        </div>
    }
    else if (project == null || !isOwner)
    {
        <div class="alert alert-danger" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>
            No tienes permiso para ver este proyecto o el proyecto no existe.
        </div>
    }
    else
    {
        <!-- Project Header -->
        <div class="card shadow-sm mb-4">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-start mb-3">
                    <div>
                        <h1 class="display-6 mb-2">@project.Title</h1>
                        <p class="text-muted mb-0">
                            <i class="bi bi-calendar me-1"></i>
                            Creado el @project.CreatedDate.ToString("dd/MM/yyyy")
                        </p>
                    </div>
                    <div class="btn-group" role="group">
                        <button class="btn btn-outline-primary" @onclick="NavigateToEdit">
                            <i class="bi bi-pencil me-1"></i>Editar
                        </button>
                        <button class="btn btn-outline-secondary" @onclick="NavigateToProjects">
                            <i class="bi bi-arrow-left me-1"></i>Volver
                        </button>
                    </div>
                </div>
                <p class="lead">@project.Description</p>

                <!-- Statistics -->
                @if (statistics != null)
                {
                    <div class="row mt-4">
                        <div class="col-md-3">
                            <div class="card bg-primary text-white">
                                <div class="card-body text-center">
                                    <h3 class="mb-0">@statistics.TotalTasks</h3>
                                    <small>Total Tareas</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card bg-success text-white">
                                <div class="card-body text-center">
                                    <h3 class="mb-0">@statistics.CompletedTasks</h3>
                                    <small>Completadas</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card bg-warning text-white">
                                <div class="card-body text-center">
                                    <h3 class="mb-0">@statistics.PendingTasks</h3>
                                    <small>Pendientes</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card bg-danger text-white">
                                <div class="card-body text-center">
                                    <h3 class="mb-0">@statistics.OverdueTasks</h3>
                                    <small>Vencidas</small>
                                </div>
                            </div>
                        </div>
                    </div>

                    @if (statistics.TotalTasks > 0)
                    {
                        <div class="mt-3">
                            <div class="d-flex justify-content-between mb-1">
                                <span>Progreso</span>
                                <span>@statistics.CompletionPercentage.ToString("F1")%</span>
                            </div>
                            <div class="progress" style="height: 25px;">
                                <div class="progress-bar bg-success" role="progressbar"
                                     style="width: @statistics.CompletionPercentage%"
                                     aria-valuenow="@statistics.CompletionPercentage" aria-valuemin="0" aria-valuemax="100">
                                    @statistics.CompletedTasks / @statistics.TotalTasks
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>

        <!-- Tasks Section -->
        <div class="card shadow-sm">
            <div class="card-header bg-light">
                <div class="d-flex justify-content-between align-items-center">
                    <h3 class="mb-0">
                        <i class="bi bi-list-task me-2"></i>Tareas
                    </h3>
                    <button class="btn btn-sm btn-primary" @onclick="NavigateToCreateTask">
                        <i class="bi bi-plus-circle me-1"></i>Nueva Tarea
                    </button>
                </div>
            </div>
            <div class="card-body">
                @if (tasks == null || !tasks.Any())
                {
                    <div class="alert alert-info" role="alert">
                        <i class="bi bi-info-circle me-2"></i>
                        Este proyecto no tiene tareas aún. ¡Crea la primera tarea!
                    </div>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th style="width: 5%;">
                                        <input type="checkbox" disabled />
                                    </th>
                                    <th style="width: 40%;">Título</th>
                                    <th style="width: 20%;">Fecha Límite</th>
                                    <th style="width: 15%;">Estado</th>
                                    <th style="width: 20%;">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var task in tasks.OrderBy(t => t.DueDate))
                                {
                                    var isOverdue = task.Status == ProjectTaskStatus.Pending && task.DueDate < DateTime.Now;
                                    <tr class="@(isOverdue ? "table-danger" : "")">
                                        <td>
                                            <input type="checkbox" checked="@(task.Status == ProjectTaskStatus.Completed)"
                                                   @onchange="@(() => ToggleTaskStatus(task))" />
                                        </td>
                                        <td>
                                            <strong>@task.Title</strong>
                                            @if (!string.IsNullOrEmpty(task.Description))
                                            {
                                                <br />
                                                <small class="text-muted">@task.Description.Substring(0, Math.Min(50,
                                                                                                                                            task.Description.Length))@(task.Description.Length > 50 ? "..." : "")</small>
                                                }
                                            </td>
                                            <td>
                                                <span class="@(isOverdue ? "text-danger fw-bold" : "")">
                                                    @task.DueDate.ToString("dd/MM/yyyy")
                                                </span>
                                                @if (isOverdue)
                                                {
                                                    <br />
                                                    <small class="text-danger">
                                                        <i class="bi bi-exclamation-triangle"></i> Vencida
                                                    </small>
                                                }
                                            </td>
                                            <td>
                                                @if (task.Status == ProjectTaskStatus.Completed)
                                                {
                                                    <span class="badge bg-success">
                                                        <i class="bi bi-check-circle"></i> Completada
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-warning">
                                                        <i class="bi bi-clock"></i> Pendiente
                                                    </span>
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group btn-group-sm" role="group">
                                                    <a href="/tasks/edit/@task.Id" class="btn btn-outline-primary">
                                                        <i class="bi bi-pencil"></i>
                                                    </a>
                                                    <button class="btn btn-outline-danger" @onclick="() => ConfirmDeleteTask(task)">
                                                        <i class="bi bi-trash"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        }

        @if (taskToDelete != null)
        {
            <div class="modal show d-block" tabindex="-1" role="dialog">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">Confirmar Eliminación</h5>
                            <button type="button" class="btn-close" @onclick="CancelDeleteTask"></button>
                        </div>
                        <div class="modal-body">
                            <p>¿Estás seguro de que deseas eliminar la tarea <strong>@taskToDelete.Title</strong>?</p>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" @onclick="CancelDeleteTask">Cancelar</button>
                            <button type="button" class="btn btn-danger" @onclick="DeleteTask">Eliminar</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-backdrop show"></div>
        }
    </div>

@code {
    [Parameter]
    public int ProjectId { get; set; }

    private Project? project;
    private List<ProjectTask>? tasks;
    private ProjectStatistics? statistics;
    private bool isLoading = true;
    private bool isOwner = false;
    private ProjectTask? taskToDelete;

    protected override async Task OnInitializedAsync()
    {
        await LoadProject();
    }

    private async Task LoadProject()
    {
        isLoading = true;
        project = await ProjectService.GetProjectByIdAsync(ProjectId);

        if (project != null)
        {
            var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
            var userId = authState.User.FindFirst(ClaimTypes.NameIdentifier)?.Value;
            isOwner = project.OwnerUserId == userId;

            if (isOwner)
            {
                tasks = await TaskService.GetProjectTasksAsync(ProjectId);
                statistics = await ProjectService.GetProjectStatisticsAsync(ProjectId);
            }
        }

        isLoading = false;
    }

    private async Task ToggleTaskStatus(ProjectTask task)
    {
        if (task.Status == ProjectTaskStatus.Completed)
        {
            await TaskService.MarkTaskAsPendingAsync(task.Id);
        }
        else
        {
            await TaskService.MarkTaskAsCompletedAsync(task.Id);
        }
        await LoadProject();
    }

    private void ConfirmDeleteTask(ProjectTask task)
    {
        taskToDelete = task;
    }

    private void CancelDeleteTask()
    {
        taskToDelete = null;
    }

    private async Task DeleteTask()
    {
        if (taskToDelete != null)
        {
            await TaskService.DeleteTaskAsync(taskToDelete.Id);
            taskToDelete = null;
            await LoadProject();
        }
    }

    private void NavigateToEdit()
    {
        Navigation.NavigateTo($"/projects/edit/{project!.Id}");
    }

    private void NavigateToProjects()
    {
        Navigation.NavigateTo("/projects");
    }

    private void NavigateToCreateTask()
    {
        Navigation.NavigateTo($"/tasks/create/{ProjectId}");
    }
}